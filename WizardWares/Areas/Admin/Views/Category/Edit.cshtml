@model Category

<div class="card shadow border-2 mt-4">
    <div class="card-header bg-primary ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="test-white py-2">Edit Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p4">
        <form method="post">

            <div class="p-3 mt-4">
                <div asp-validation-summary="All"></div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" type="text" class="form-control border-1" />
                    <label asp-for="Name" class="ms-2"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="DisplayOrder" type="text" class="form-control border-1" />
                    <label asp-for="DisplayOrder" class="ms-2"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        <button class="btn btn-dark form-control">Update</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-primary form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

