@model Category
<div class="card shadow border-0 mt-4">
    <div class="card-header ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="test-white py-2"> @(Model.Id!=0?"Update":"Create") Category</h2>
            </div>
        </div>
    </div>
    <div class="card-body p4">
        <form method="post" class="row">
            <input asp-for="Id" hidden />
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        <div asp-validation-summary="All"></div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="Name" type="text" class="form-control border-0" />
                            <label asp-for="Name" class="ms-2"></label>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-floating py-2 col-12">
                            <input asp-for="DisplayOrder" type="text" class="form-control border-0" />
                            <label asp-for="DisplayOrder" class="ms-2"></label>
                            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                        </div>
                        <div class="row">
                            <div class="col-6 col-md-3">
                                <button class="btn btn-dark form-control">@(Model.Id != 0 ? "Update" : "Create")</button>
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-dark form-control">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </form>

    </div>
</div>
