@model Rarity

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="test-white py-2">Edit Rarity</h2>
            </div>
        </div>
    </div>
    <div class="card-body p4">
        <form method="post">

            <div class="border p-3 mt-4">
                <div class="row pb-2">
                    <h2 class="text-primary-emphasis">Edit Rarity</h2>
                    <hr />
                </div>
                <div asp-validation-summary="All"></div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" type="text" class="form-control border-0" />
                    <label asp-for="Name" class="ms-2"></label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="Description" type="text" class="form-control border-0" />
                    <label asp-for="Description" class="ms-2"></label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ColorCode" type="text" class="form-control border-0" />
                    <label asp-for="ColorCode" class="ms-2"></label>
                    <span asp-validation-for="ColorCode" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="ValueOrder" type="text" class="form-control border-0" />
                    <label asp-for="ValueOrder" class="ms-2"></label>
                    <span asp-validation-for="ValueOrder" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        <button class="btn btn-dark form-control">Update</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Rarity" asp-action="Index" class="btn btn-outline-dark form-control">Back to List</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

