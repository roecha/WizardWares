@model IEnumerable<Product>

<div class="row pb-3">
    @foreach (var product in Model)
    {
        <div class="col-lg-3  col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card p-3 rounded" style="border: 5px solid @product.Rarity.ColorCode; box-shadow: 0 0.5rem 3rem @product.Rarity.ColorCode;">
                        <img src="@product.ImageUrl" class="card-img-top rounded" />
                        <div class="card-body pb-0">
                            <div class="pl-1">
                                <p class="card-title h5 opacity-75 text-uppercase text-center">@product.Name</p>
                            </div>
                            <div class="pl-1">
                                <p class="text-opacity-75 text-center mb-0">
                                    Price:
                                    <span class="">
                     
                                        @product.Price.ToString()
                                    </span>
                                    <i class="bi bi-coin"></i>
                                </p>
                            </div>
                            <div class="pl-1">
                                <p class="text-opacity-75 text-center mb-0">
                                    -or-
                                </p>
                            </div>
                            <div class="pl-1">
                                <p class="text-opacity-75 text-center">
                                    <span>
                                        @product.TradeItem
                                    </span>
                                </p>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Details" asp-route-productId="@product.Id" class="btn btn-primary bg-gradient border-1 form-control">
                                Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>